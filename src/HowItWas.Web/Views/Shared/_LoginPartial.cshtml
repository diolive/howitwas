@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="@nameof(Account)" asp-action="@nameof(Account.LogOff)" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="@nameof(Manage)" asp-action="@nameof(Manage.Index)" title="Manage">Hello @User.GetUserName()!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="@nameof(Account)" asp-action="@nameof(Account.Register)">Register</a></li>
        <li><a asp-controller="@nameof(Account)" asp-action="@nameof(Account.Login)">Log in</a></li>
    </ul>
}